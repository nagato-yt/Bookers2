<!DOCTYPE html>
<html>
    <body>
        <p>users#show</p>
        <div class="container px-5 px-sm-0">
            <div class="row">
                <%= render 'books/list',books:@books,book:@book %>
                <div class="col-md-8 offset-md-1">
                    <h2>Books</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Title</th>
                                <th>Opinion</th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        
                            
                        <tbody>
                       <% @books.each do |book| %>
                       <!--%  @book.user.profile_image.attached? %>-->
                        <tr>
                           <td><%= link_to user_path(book.user) do %>
                           <%= image_tag @user.get_profile_image(80,80) %>
                           <%end%></td>
                            <td><%=link_to  book_path(book) do %>
                            <%= book.title %>
                            <%end%>
                            
                            </td>
                            <td><%= book.body %></td>
                        </tr>
                    <%end%>
                    </tbody>
                     </table>
                </div>
                
                
            </div>
        </div>
        
    </body>
</html>
