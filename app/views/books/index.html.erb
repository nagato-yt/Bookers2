<!DOCTYPE html>
<html>
    <body>
        <p></p>
        <div class="container px-5 px-sm-0">
            <div class="row">
                <%= render 'list', books:@books %>
                <div class="col-md-8 offset-md-1">
                    <h2>Books</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Title</th>
                                <th>Opinion</th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        
                        <% @books.each do |book| %>
                        <% if book.user.profile_image.attached? %>
                        <tr>
                           <td><%= link_to user_path(book.user) do %>
                           <%= image_tag book.user.get_profile_image(80,80) %>
                           <%end%></td>
                            <td><%=link_to  book_path(book) do %>
                            <%= book.title %>
                            <%end%>
                            </td>
                            <td><%= book.body %></td>
                        </tr>
                        <%end%>
                    <%end%>
                     </table>
                </div>
                
                
            </div>
        </div>
        
    </body>
</html>
