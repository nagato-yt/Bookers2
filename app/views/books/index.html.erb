<!DOCTYPE html>
<html>
    <body>
        <p></p>
        <div class="container px-5 px-sm-0">
            <div class="row">
                <div class="col-md-3">
                    <h2>User info</h2>
                       <!--< if book.image.attached? %>-->
                       <!--<= image_tag book.image, size: "100x100" %>-->
                       <!--<else%>-->
                       <!--<= image_tag 'no_image', size: "100x100" %>-->
                       <!--<end%>-->
                       <table class="table">
                           <tbody>
                               <tr></tr>
                               <tr>
                                   <th>name</th>
                                   <!--<th><= user.name %></th>-->
                               </tr>
                               <tr>
                                   <th>introdction</th>
                                   <th></th>
                               </tr>
                           </tbody>
                       </table>
                       <div class="row">
                           <a class="btn btn-outline-secondary btn-block edit_user" href="/user/edit"><i class="fa-solid fa-user-gear"></i></a> 
                       </div>
                       <h2 class="mt-3">New book</h2>
                       <div>
                           <%= form_with model: @book do |f| %>
                           <div>
                               <label>Title</label><br/>
                               <%= f.text_field :title %>
                           </div>
                           <div>
                                <label>Opinion</label><br/>
                                <%= f.text_area :body %>
                           </div>
                           
                          
                           
                           
                           <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
                           
                           <%end%>
                           
                       </div>
                       
                </div>
                <div class="col-md-8 offset-md-1">
                    <h2>Book detail</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Title</th>
                                <th>Opinion</th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        <% @books.each do |book| %>
                        <tr>
                            <!--<td><= user.name %></td>-->
                            <td><%= book.title %></td>
                            <td><%= book.body %></td>
                            <td><%=link_to "Edit", edit_book_path(book), class:"btn btn-sm btn-success"%></td>
                            <td><%= link_to"Destroy",book_path(book), method: :delete, "data-confirm" =>"本当に削除しますか？", class:"btn btn-sm btn-danger"%></td>
                   
                    <%end%>
                     </table>
                </div>
                
                
            </div>
        </div>
        
    </body>
</html>
