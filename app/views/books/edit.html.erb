<!DOCTYPE html>
<html>
    
    <body>
        <main>
            <p></p>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                        <h1>Editing Book</h1>
                        <%= form_with model: @book do |f| %>
                        <div>
                          <label>Title</label><br/>
                          <%= f.text_field :title %>
                        </div>
                        <div>
                          <label>Opinion</label><br/>
                          <%= f.text_area :body %>
                        </div>
                        <div>
                            <%=f.submit'Update Book',class:"btn btn-sm btn-success" %>
                        </div>
                            
                        <%end%>
                        <%= link_to"Show", books_path(@book) %>
                        |
                        <a ="back" href="/books">Back</a>
                        
                     
                    </div>
                    
                </div>
            </div>
            
        </main>
    </body>
</html>