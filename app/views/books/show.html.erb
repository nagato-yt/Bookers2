<!DOCTYPE html>
<html>
    <body>
        <p>books/show</p>
        <div class="container px-5 px-sm-0">
            <div class="row">
                <%= render 'list', books:@books, book:@book %>
                <div class="col-md-8 offset-md-1">
                    <h2>Book detail</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Title</th>
                                <th>Opinion</th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody>
                        
                        <tr>
                           <% if @bookuser.user.profile_image.attached? %>
                           <td><%= link_to user_path(@bookuser.user.id) do %>
                            <%= image_tag @bookuser.user.get_profile_image(100,100) %><br/><%= @bookuser.user.name %>
                           <%end%></td>
                            <td><%=link_to  book_path(@bookuser) do %>
                            <%= @bookuser.title %>
                            <%end%>
                            <%end%>
                            </td>
                            <td><%= @book.body %></td>
                            <td><%=link_to "Edit", edit_book_path(@bookuser), class:"btn btn-sm btn-success"%></td>
                            <td><%= link_to"Destroy",book_path(@bookuser), method: :delete, "data-confirm" =>"本当に削除しますか？", class:"btn btn-sm btn-danger"%></td>
                             
                        </tr>
                        </tbody>
                   
                     </table>
                </div>
                
                
            </div>
        </div>
        
    </body>
</html>
