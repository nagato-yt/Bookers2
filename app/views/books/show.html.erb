<!DOCTYPE html>
<html>
    <body>
        <p>books/show</p>
        <div class="container px-5 px-sm-0">
            <div class="row">
                <div class="col-md-3">
                    <h2>User info</h2>
                     <% if current_user.profile_image.attached? %>
                       <%= image_tag current_user.profile_image, size:"100x100" %>
                     <%else%>
                       <%= image_tag 'no_image',size:"100x100" %>
                     <%end%>
                       <table class="table">
                           <tbody>
                               <tr></tr>
                               <tr>
                                   <th>name</th>
                                   <th><%= current_user.name %></th>
                               </tr>
                               <tr>
                                   <th>introdction</th>
                                   <th><%= current_user.introduction %></th>
                               </tr>
                           </tbody>
                       </table>
                       <div class="row">
                           <%= link_to  edit_user_path(current_user),class:"btn btn-outline-secondary btn-block" do %>
                           <i class="fa-solid fa-user-gear"></i>
                           <%end%>
                       </div>
                       <h2 class="mt-3">New book</h2>
                       <div>
                           <%= form_with model: @book do |f| %>
                           <div>
                               <label>Title</label><br/>
                               <%= f.text_field :title %>
                           </div>
                           <div>
                                <label>Opinion</label><br/>
                                <%= f.text_area :body %>
                           </div>
                           <div>
                               <%=f.submit'Create Book',class:"btn btn-success"%>
                           </div>
                                        
                           
                           <%end%>
                           
                       </div>
                       
                </div>
                <div class="col-md-8 offset-md-1">
                    <h2>Book detail</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Title</th>
                                <th>Opinion</th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody>
                        
                        <tr>
                           <% if @book.user.profile_image.attached? %>
                           <td><%= link_to user_path(@book.user.id) do %>
                            <%= image_tag @book.user.get_profile_image(100,100) %><br/><%= @book.user.name %>
                           <%end%></td>
                            <td><%=link_to  book_path(@book) do %>
                            <%= @book.title %>
                            <%end%>
                            <%end%>
                            </td>
                            <td><%= @book.body %></td>
                            <td><%=link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success"%></td>
                            <td><%= link_to"Destroy",book_path(@book), method: :delete, "data-confirm" =>"本当に削除しますか？", class:"btn btn-sm btn-danger"%></td>
                             
                        </tr>
                        </tbody>
                   
                     </table>
                </div>
                
                
            </div>
        </div>
        
    </body>
</html>
